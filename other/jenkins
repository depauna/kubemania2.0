sudo yum -y update
sudo yum install java-1.8.0-openjdk
mkdir jenkins && cd jenkins
wget https://updates.jenkins-ci.org/download/war/2.164.2/jenkins.war
/usr/lib/jvm/java-1.8.0-openjdk-1.8.0.212.b04-0.el7_6.x86_64/jre/bin/java

vim start.sh
---
#!/bin/bash

rm -f nohup.out
export PATH=/usr/lib/jvm/java-1.8.0-openjdk-1.8.0.212.b04-0.el7_6.x86_64/jre/bin/:$PATH
nohup /usr/lib/jvm/java-1.8.0-openjdk-1.8.0.212.b04-0.el7_6.x86_64/jre/bin/ -Xmx2g -XX:MaxPermSize=512m -jar jenkins.war &
#

vim stop.sh
---
#!/bin/bash

kill $(ps aux | grep jenkins.war | grep -v grep | awk '{printf("%s ", $2); }')
#


